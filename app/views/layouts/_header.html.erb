<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("en"), locale: :en %></li>
        <li><%= link_to t("vi"), locale: :vi %></li>
        <li><%= link_to t("static_pages.home.home"), "#" %></li>
        <li><%= link_to t("static_pages.help.help"), "#" %></li>
        <% if logged_in %>
          <li><%= link_to t("users.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t "users.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.profile"), user_path(current_user) %></li>
              <li><%= link_to t("users.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
